{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ]
  ],
  "autoClosingPairs": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "\"", "\"" ],
    [ "'", "'" ],
    [ "`", "`" ],
    [ "[[", "]]" ]
  ],
  "surroundingPairs": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "\"", "\"" ],
    [ "'", "'" ],
    [ "`", "`" ]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*((else|elseif|for|function|if|repeat|while)|(.*\\sdo\\b))\\b[^\\{;]*$",
    "decreaseIndentPattern": "^\\s*([}\\]]([,)]?\\s*(#_|$)|\\.[a-zA-Z_]\\w*\\b)|(else|elseif)\\b)"
  }
}